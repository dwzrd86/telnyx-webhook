{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "SHELL",
    "shell": {
      "script": "pip install -r requirements.txt"
    }
  },
  "deploy": {
    "start": "bash start.sh",
    "healthcheck": "/health",
    "restartPolicy": "ON_FAILURE"
  },
  "variables": {
    "PORT": "8080",
    "TELEGRAM_BOT_TOKEN": "",
    "TELEGRAM_CHAT_ID": "",
    "MIZZLE_ENDPOINT": ""
  }
}
